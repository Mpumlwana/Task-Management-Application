<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmanagementapp2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManagementApp2">

        <!-- SplashActivity Declaration -->
        <activity android:name=".splashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity Declaration -->
        <activity android:name=".loginActivity"
            android:exported="true" />

        <!-- RegisterActivity Declaration -->
        <activity android:name=".registerActivity"
            android:exported="true" />

        <!-- HomeActivity Declaration -->
        <activity android:name=".homeActivity"
            android:exported="true" />

        <!-- TaskOrganizationActivity Declaration -->
        <activity android:name=".taskOrganizationActivity"
            android:exported="true" />
        <activity android:name=".mainActivity"
                android:exported="true" />

    </application>


</manifest>






